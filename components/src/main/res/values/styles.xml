<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="BaseTextInputLayout" parent="Theme.Design.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_color_hint</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/color_control_activated</item>
    </style>

    <!-- TextInputLayout -->

    <style name="Input.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">84dp</item>
        <item name="android:theme">@style/BaseTextInputLayout</item>
    </style>

    <style name="Input.TextInputLayout.Password">
        <item name="passwordToggleEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="counterMaxLength">15</item>
    </style>

    <style name="Input.TextInputLayout.Password.ToggleEnabled">
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="Input.TextInputLayout.PostalCode">
        <item name="counterEnabled">false</item>
        <item name="counterMaxLength">5</item>
    </style>



    <style name="BaseDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/padding_size_12</item>
        <item name="android:paddingLeft">@dimen/padding_size_25</item>
        <item name="android:paddingRight">@dimen/padding_size_25</item>
        <item name="android:paddingBottom">@dimen/padding_size_25</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <!-- ========================================================================= -->

    <style name="BaseDialog.Notice">
        <item name="android:paddingTop">@dimen/padding_size_25</item>
        <item name="android:paddingLeft">@dimen/padding_size_25</item>
        <item name="android:paddingRight">@dimen/padding_size_25</item>
        <item name="android:paddingBottom">@dimen/padding_size_0</item>
        <item name="android:background">@drawable/dialog_rounded_bg</item>
    </style>

</resources>
